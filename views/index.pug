extends layout

block content
    include mixins/PokemonCards
        div.container
            div.add-button-row
                a.button.save(href="/add") Add PokemonCards
            each Pokemon in Pokemon
                +PokemonCards(Pokemon)
    div.card
        div.title
            div.name Tepig
            p HP 60
                img.power(src='/images/fire-removebg-preview.png')
                img.power(src='/images/basicPokemon.png')

        img.img(src='Rollout')
        div.powerrow
            img.power(src='/images/fire-removebg-preview.png')
            img.power(src='/images/basicPokemon.png')
            p Ember
            p 30

        div.powerrow
            img.power(src='/images/fire-removebg-preview.png')
            img.power(src='/images/basicPokemon.png')
            p Rollout
            p 20

        div.divide

        div.weak weakness

        div.resistance resistance

        div.retreat Retreat Cost

        div.weakness
            img.power(src='/images/water-removebg-preview.png')
            img.power(src='/images/water-removebg-preview.png')

        div.retreating
            img.power(src='/images/basicPokemon.png')
            img.power(src='/images/basicPokemon.png')
